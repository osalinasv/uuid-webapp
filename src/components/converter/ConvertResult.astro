---
import { convertId } from '@/lib/uuid/convert'
import ConvertError from '@/components/converter/ConvertError.astro'
import ConvertSuccess from '@/components/converter/ConvertSuccess.astro'

export type Props = {
  rawValue: string
}

const { rawValue } = Astro.props
const convertResult = convertId(rawValue)
---

{
  convertResult.ok ? (
    <ConvertSuccess result={convertResult.value} />
  ) : (
    <ConvertError error={convertResult.error} rawValue={rawValue} />
  )
}
