---
import { type ConvertResult } from '@/lib/uuid/convert'

export type Props = {
  result: ConvertResult
}

const { result } = Astro.props
---

<section class="mt-4 grid gap-4 rounded-lg border bg-card p-6 text-center text-card-foreground shadow">
  <article>
    <h2 class="mb-1 font-bold">UUID v{result.version}</h2>
    <p class="break-all font-mono text-lg">{result.uuidFormat}</p>
  </article>

  <article>
    <h3 class="mb-1 font-bold">Oracle RAW(16)</h3>
    <p class="break-all font-mono text-lg">{result.oracleFormat}</p>
  </article>

  <article>
    <h3 class="mb-1 font-bold">Unsigned Integers</h3>
    <p class="flex flex-wrap justify-center gap-x-[6px] font-mono text-lg">
      {result.bytes.map((byte) => <span>{byte}</span>)}
    </p>
  </article>
</section>
