---
import ThemeToggle from '@/components/page/ThemeToggle.astro'

export const prerender = true
---

<header class='supports-backdrop-blur:bg-background/60 sticky top-0 z-50 w-full bg-background/75 backdrop-blur'>
  <div class='container flex h-12 items-center gap-2'>
    <nav class='inline-block space-x-2'>
      <a class='font-medium text-muted-foreground' href='https://osalinasv.dev/' rel='noopener' target='_blank'>
        osalinasv.dev
      </a>
      <a class='font-bold' href='/'>uuid</a>
    </nav>

    <div class='flex flex-1 items-center justify-end'>
      <ThemeToggle />
    </div>
  </div>
</header>

<section class='max-w-screen-sm mx-auto p-4 mt-10 mb-4'>
  <h1 class='text-center text-3xl font-bold leading-tight mb-4 md:text-5xl'>UUID Tools</h1>
  <p class='max-w-screen-sm text-lg text-muted-foreground sm:text-xl'>
    Convert between common UUID formats, generate new values and analyze their byte components.
    <a class='underline underline-offset-4 hover:text-accent-foreground transition-colors' href='#about'>
      What is UUID?
    </a>
  </p>
</section>
