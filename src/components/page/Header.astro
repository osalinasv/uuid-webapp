---
import Button from '@/components/ui/Button.astro'

export const prerender = true
---

<header class='container flex h-14 items-center gap-2'>
  <nav class='inline-block'>
    <a class='font-medium text-muted-foreground' href='https://osalinasv.dev/' rel='noopener' target='_blank'>
      osalinasv.dev/
