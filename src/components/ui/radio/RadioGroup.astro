---
import { type HTMLAttributes } from 'astro/types'
import { cn } from '@/lib/utils'

export type Props = HTMLAttributes<'fieldset'>
const { class: className, ...props } = Astro.props as Props
---

<fieldset role="radiogroup" dir="ltr" class={cn('grid gap-2 outline-none', className)} {...props}>
  <slot />
</fieldset>
