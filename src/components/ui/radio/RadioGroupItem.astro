---
import { type HTMLAttributes } from 'astro/types'
import { cn } from '@/lib/utils'

export type Props = HTMLAttributes<'input'> & {
  id: string
  name: string
  value: string | number
}

const { class: className, id, name, value, ...props } = Astro.props as Props
const buttonId = `${id}Btn`

export const prerender = true
---

<div class={cn('flex items-center gap-x-2', className)}>
  <input
    id={id}
    type='radio'
    name={name}
    value={value}
    tabindex='-1'
    aria-hidden='true'
    class='invisible pointer-events-none absolute peer m-0 w-4 h-4'
    {...props}
  />
  <button
    id={buttonId}
    type='button'
    role='radio'
    class='aspect-square h-4 w-4 rounded-full border border-primary text-primary shadow focus:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 peer-checked:[&>*]:visible'
    tabindex='0'
    _={`on click set #${id}.checked to true`}>
    <span class='flex items-center justify-center invisible'>
      <svg
        width='15'
        height='15'
        viewBox='0 0 15 15'
        fill='none'
        xmlns='http://www.w3.org/2000/svg'
        class='h-3.5 w-3.5 fill-primary'
        aria-hidden='true'>
        <path
          d='M11.4669 3.72684C11.7558 3.91574 11.8369 4.30308 11.648 4.59198L7.39799 11.092C7.29783 11.2452 7.13556 11.3467 6.95402 11.3699C6.77247 11.3931 6.58989 11.3355 6.45446 11.2124L3.70446 8.71241C3.44905 8.48022 3.43023 8.08494 3.66242 7.82953C3.89461 7.57412 4.28989 7.55529 4.5453 7.78749L6.75292 9.79441L10.6018 3.90792C10.7907 3.61902 11.178 3.53795 11.4669 3.72684Z'
          fill='currentColor'
          fill-rule='evenodd'
          clip-rule='evenodd'></path>
      </svg>
    </span>
  </button>
  <label
    class='text-sm font-medium leading-none cursor-pointer peer-disabled:cursor-not-allowed peer-disabled:opacity-70'
    for={buttonId}>
    <slot />
  </label>
</div>
