---
import type { HTMLAttributes, HTMLTag } from 'astro/types'
import { cn } from '@/lib/utils'

export type Props<Tag extends HTMLTag> = HTMLAttributes<Tag> & {
  as: Tag
}

const { as: Tag, class: classNames, ...props } = Astro.props
---

<Tag
  role="menuitem"
  class={cn(
    'flex w-full select-none items-center rounded-sm px-2 py-1.5 text-sm outline-none transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:bg-accent focus-visible:text-accent-foreground',
    classNames,
  )}
  {...props}>
  <slot />
</Tag>
