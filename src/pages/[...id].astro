---
import { formatPageTitle } from '@/lib/utils'
import { sanitizeIdInput } from '@/lib/uuid/shared'

import Layout from '@/layouts/Layout.astro'
import About from '@/components/page/About.astro'
import Header from '@/components/page/Header.astro'
import Footer from '@/components/page/Footer.astro'
import ConvertForm from '@/components/converter/ConvertForm.astro'
import GenerateForm from '@/components/generator/GenerateForm.astro'

let { id } = Astro.params
const rawValue = id ? sanitizeIdInput(id) : ''
---

<Layout title={formatPageTitle(rawValue)}>
  <Header />
  <ConvertForm rawValue={rawValue} />
  <GenerateForm />

  <About />
  <Footer />
</Layout>
